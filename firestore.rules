/**
 * @fileoverview Firestore Security Rules for the PULSE disaster alert system.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and alerts, while allowing broader access to disaster event data.
 *
 * Data Structure:
 * - /users/{userId}: User profile information, accessible only to the owning user.
 * - /users/{userId}/alerts/{alertId}: Alerts specific to a user, accessible only to that user.
 * - /disasterEvents/{disasterEventId}: Disaster event information, potentially accessible to service accounts or admin roles (currently open for prototyping).
 * - /disasterEvents/{disasterEventId}/insights/{insightId}: AI-generated insights for disaster events.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect privacy.
 * - Disaster event data is currently open for `get` and `list` operations to facilitate prototyping, but write access is denied without specific authorization. In the future, access may be restricted to service accounts or admin roles.
 *
 * Denormalization for Authorization:
 * - The `alerts` subcollection under each user denormalizes relevant information from the `DisasterEvent` to avoid `get()` calls in security rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the requesting user is signed in.
     * @param {string} userId The user ID to check against the request's auth UID.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requesting user is the owner of the document.
     * @param {string} userId The user ID to check against the request's auth UID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the requesting user is the existing owner of the document.
     * @param {string} userId The user ID to check against the request's auth UID.
     * @return {boolean} True if the user is the owner and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Enforces document ownership and existence for destructive operations.
     * @path /users/{userId}
     * @allow (create) request.auth.uid == 'user123' and request.resource.data.id == 'user123'
     * @deny (create) request.auth.uid != 'user123'
     * @allow (get, list) Always allowed for the owner.
     * @deny (update, delete) If the document does not exist.
     * @principle Enforces document ownership for writes, ensures existence for updates/deletes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Do not allow listing of user profiles.

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces path-based ownership for user-specific alerts.
     * @path /users/{userId}/alerts/{alertId}
     * @allow (create) request.auth.uid == 'user123'
     * @deny (create) request.auth.uid != 'user123'
     * @allow (get, list) Always allowed for the owner.
     * @deny (update, delete) If the document does not exist.
     * @principle Restricts access to a user's own data tree, ensures existence for updates/deletes.
     */
    match /users/{userId}/alerts/{alertId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to disaster event information.
     * @path /disasterEvents/{disasterEventId}
     * @allow (get, list) Public read access for prototyping.
     * @deny (create, update, delete) Always deny writes for non-admins.
     * @principle Grants public read access but restricts write access.
     */
    match /disasterEvents/{disasterEventId} {
      allow get: if true;
      allow list: if true;

      allow create: if false; // TODO: Add admin/service account check
      allow update: if false; // TODO: Add admin/service account check
      allow delete: if false; // TODO: Add admin/service account check
    }

    /**
     * @description Controls access to AI-generated insights for disaster events.
     * @path /disasterEvents/{disasterEventId}/insights/{insightId}
     * @allow (get, list) Public read access (inherited from parent).
     * @deny (create, update, delete) Inherited deny writes from parent.
     * @principle Inherits security context from parent disaster event.
     */
    match /disasterEvents/{disasterEventId}/insights/{insightId} {
      allow get: if true; // Inheriting read access from the disasterEvents collection.
      allow list: if true; // Inheriting read access from the disasterEvents collection.

      allow create: if false; // Inheriting write denial from the disasterEvents collection.
      allow update: if false; // Inheriting write denial from the disasterEvents collection.
      allow delete: if false; // Inheriting write denial from the disasterEvents collection.
    }
  }
}